<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>
        <property name="connection.pool_size">1</property>
        <property name="connection.url">jdbc:mysql://127.0.0.1:3306/formationmanger?userUnicode=true&amp;characterEncoding=UTF-8</property>
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">create</property>
        <mapping class="com.lo54_project.entity.Client"/>
        <mapping class="com.lo54_project.entity.CourseSession"/>
        <mapping class="com.lo54_project.entity.Course"/>
        <mapping class="com.lo54_project.entity.Location"/>
    </session-factory>
</hibernate-configuration>